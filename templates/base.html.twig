<!DOCTYPE html>
<html>
	<head>
		<title>
			{% block title %}SIM LAIT
			{% endblock %}
		</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0"> {% block javascripts %}{% endblock %}

		{% block stylesheets %}

			<link
			rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
		{# <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/app.css') }}"> #}
		{% endblock %}
	</head>
	<body>
		<nav>
			<div class="nav-wrapper">
				<div class="container">
					<a href="{{ path('app_home') }}" class="brand-logo">SIM LAIT</a>
					<ul id="nav-mobile" class="right hide-on-med-and-down">
						<li>
							<a href="{{ path('app_home') }}">Accueil</a>
						</li>
						{% if app.user %}
							<li>
								<a href="/user_mobile">user</a>
							</li>
							<li>
								<a href="/zone/crud">Zone</a>
							</li>
							<li>
								<a href="/region/crud">Région</a>
							</li>
							<li>
								<a href="/departement/crud">Département</a>
							</li>
							<li>
								<a href="/profil/crud">Profil</a>
							</li>
							<li>
								<a href="/status/crud">Statut</a>
							</li>

							<li>
								<a href="/logout/crud">Logout</a>
							</li>
						{% else %}
							<li>
								<a href="/login">Login</a>
							</li>
							<li>
								<a href="/register">inscription</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>

		{% block body %}{% endblock %}

		{% block scripts %}
			<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

			<script type="text/javascript">
				$('select').formSelect();
			</script>
		{% endblock %}
	</body>
</html>
